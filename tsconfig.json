{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib/",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@react/*": ["./src/react/*"],
      "@vue/*": ["./src/vue/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/__test__/"]
}
